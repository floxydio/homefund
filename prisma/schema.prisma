// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model Users {
  id                Int    @id @default(autoincrement())
  name              String
  username          String @unique
  password          String
  profile_image     String @default("profile.png")
  investment_amount Int
  status_validasi   Int
  user_agent        String
}

model Category {
  id       Int    @id @default(autoincrement())
  category String
  icon     String
}

model History_qrScanner {
  id         Int      @id @default(autoincrement())
  userid     Int
  result     String
  createdate DateTime
}

model News_Slider {
  id     Int    @id @default(autoincrement())
  name   String
  detail String
  image  String
  status Int
}

model Setting {
  maintenance_status Int    @id @default(autoincrement())
  maintenance_note   String
  fee                Int
  version_app        Int
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
